/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.nav-button {
  display: flex;
  justify-content: center; /* 按钮均匀分布 */
  position: fixed; /* 固定在底部 */
  bottom: 0;
  width: 100%;
  background-color: #fff; /* 背景颜色 */
  padding: 0; /* 内边距 */
  margin: 0;
}

.header {
  padding: 0;
  margin: 0;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20px;
  color: white;
  height: 180px;                /* 设置高度，与微信标题一致 */
  background-color: #099109;      /* 背景颜色 */
  border-bottom: 1px solid #ddd; /* 底部边框，类似微信 */
}
